<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog
            title="Criar contentor">
        <content>
            <f:SimpleForm>
            <Label text="Matrícula"/>
            <Input id="contInput" placeholder="Introduzir matrícula" liveChange="onCriarLive"/>
            <Label text="Tipo"/>
            <Select items="{Tipos>/tipos}" change="onCriarSelected">
                <core:Item key="{Tipos>key}" text="{Tipos>text}" />
            </Select>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Ok" press="onDialogOkButton" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onDialogCloseButton" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>